<% provide(:title, "Iniciar sesión" )%>
<h1><%= yield(:title)  %></h1>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= form_for(:session, url: login_path) do |f| %>
		<%= f.email_field :email, class:"form-control", placeholder: "Correo" %>
		<br />
		<%= f.password_field :password, class:"form-control", placeholder: "Contraseña" %>
		<%= f.label :remember_me, class: "checkbox-inline" do %>
		<br />
		<%= f.check_box :remember_me %>
		<span>Mantener sesión en este computador</span>
		<% end %>
		<br />
		<%= f.submit "Iniciar sesión", class: "btn btn-primary btn-lg" %>
		<% end %>
		<br />
		<p>¿Nuevo en Memocity? <%= link_to 'Registrar', signup_path %> </p>
	</div>
</div>
