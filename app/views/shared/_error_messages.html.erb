<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
     Existen <%= pluralize(@user.errors.count, "errores") %>, por favor revisar.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
